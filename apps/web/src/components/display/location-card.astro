---
import type { LocationDisplay } from "@repo/program-data";
import { Button } from "@repo/ui";
import { MapPin } from "lucide-react";

interface Props {
  location: LocationDisplay;
  key?: unknown;
  displayCount?: boolean;
}

const { location, displayCount } = Astro.props;
const { name, slug, count } = location;
