<Button className="h-auto py-4" href={`/locations/${slug}`} variant="outline">
  <MapPin className="h-4 w-4 mr-2" />
  <span class="truncate">{name}</span>
  {
    displayCount ? (
      <span class="ml-2 border rounded-sm border-inherit px-1">{count}</span>
    ) : null
  }
</Button>

