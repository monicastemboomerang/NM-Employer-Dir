---
import type { CategoryDisplay } from "@repo/program-data";
import {
  Button,
  Card,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@repo/ui";

interface Props {
  title: string;
  description?: string;
  count?: number;
  icon?: CategoryDisplay["icon"];
  href?: string;
  key?: unknown;
}

const { title, description, count, icon, href } = Astro.props;
