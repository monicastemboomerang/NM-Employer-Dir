<Card className="h-auto  text-accent-foreground">
  <div class="h-full flex flex-col">
    <CardHeader>
      <div class="flex items-center justify-between">
        <div
          class:list={[
            "p-2 text-xl  rounded-lg flex justify-center",
            { border: Boolean(icon) },
          ]}
        >
          {
            icon ? (
              <i
                class={`icon-${icon}`}
                style={{
                  lineHeight: 1,
                }}
              />
            ) : null
          }
        </div>
        <span class="text-sm">{count} companies</span>
      </div>
      <CardTitle className="mt-4 ">{title}</CardTitle>
      <CardDescription>{description}</CardDescription>
    </CardHeader>
    <CardFooter className="flex justify-end items-end h-full">
      <Button href={href} variant="tertiary">View</Button>
      <!-- <a href={`/services/${slug}`}>View</a> -->
    </CardFooter>
  </div>
</Card>
